<% if (title) { %>
    <h1><%= title %></h1> 
    <% } else {
        res.redirect('/')
    } %>


<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>


<p ><%- messages() %></p>
<div class="main-container">
   
    <div class="login-container">
        <form id="loginForm" action="/account/login" method="post">

            <label for="account_email">Email</label>
           <input id="email" type="text" name="account_email" placeholder="Email" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" required>

           <label for="account_password">Password</label>
           <input id="password" type="password" name="account_password" placeholder="Password" id="pword" required>


           <p class="password-instruction">Password must be minimum of 6 characters and includes 1 capital letter,
            1 number and 1 special character.
           </p>

           <button type="submit">Login</button>
       </form>
   
       <a class="register-link" href="/account/register">Don't have an account? Register</a>
   </div>
</div>



       
          
   

   