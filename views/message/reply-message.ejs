
<p ><%- messages() %></p>
<div class="content-container-two">
    <% if (locals.errors) { %>
        <div class="errors" style="background-color: #00000099; padding: 10px;">
            <% locals.errors.array().forEach((error) => { %>
                <p><%= error.msg %></p>
            <% }) %>
        </div>
    <% } %>
  <h2>Reply Message</h2>
  <p>RE: <%= locals.message.message_subject %></p>
  <form class="form-content-container" style="margin: -10px -5px;" id="update" action="/message/create-reply" method="post">
    <label for="subject">Subject: </label>
    <input name="subject" placeholder="Subject" required value="<%= locals.message.message_subject %>">
   <label for="message">Message</label>
   <textarea id="message" name="message" rows="3" cols="50" pattern="[a-zA-Z]{10,500}$" required><%= locals.message.message_body %></textarea>
   <input type="hidden" name="recipient_id" value="<%= locals.message.message_from %>"> 
   <input type="hidden" name="sender_id" value="<%= locals.message.message_to %>">
   <button type="submit">Send</button>
</form>
</div>