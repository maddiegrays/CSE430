<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>

<p><%- messages() %></p>
<% if (errors) { %>
    <% errors.array().forEach(error => { %>
        <p class="form-error-msg"><%= error.msg %></p>
    <%  }) %>
<% } %>
<div class="container">
    <div class="login-container">
        <form action="/inv/add-classification" method="post">
            
           <input type="text" name="name" placeholder="Classification name" value="<%= locals.name %>">
           &nbsp;
           <button type="submit">Add Classification</button>
       </form>
       <p>
       Name must only be Alphabetic characters
    </p>
   </div>
